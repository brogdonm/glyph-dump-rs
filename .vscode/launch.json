  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug executable 'glyph-dump' (Windows)",
      "type": "cppvsdbg",
      "request": "launch",
      "program": "${workspaceRoot}/target/debug/glyph-dump.exe",
      "args": [
        "--font-file=C:\\temp\\FRABK.TTF",
        "--scale-factor=512.0"
      ],
      "cwd": "${workspaceFolder}",
      "env": {
        "RUST_LOG": "debug"
      }
    }
  ]
}
